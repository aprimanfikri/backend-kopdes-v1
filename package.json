{
  "name": "starter",
  "scripts": {
    "dev": "bun run --hot src/server/index.ts",
    "start": "bun run dist/index.js",
    "build": "bun run build.ts",
    "lint": "eslint . --ext .ts,.mts,.cts",
    "lint:fix": "eslint . --ext .ts,.mts,.cts --fix",
    "compile": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/server/index.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "@types/pg": "^8.15.6",
    "bun-plugin-dts": "^0.3.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.48.0"
  }
}
